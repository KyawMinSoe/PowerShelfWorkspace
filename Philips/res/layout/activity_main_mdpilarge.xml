<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg_shelf">
    
   			
 	<RelativeLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            
 	    <Button
                android:id="@+id/btn_logout"
                android:layout_width="90dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_logout" />
      

   </RelativeLayout>
   
 	<RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"           
            android:layout_below="@+id/header">
 	    
 	     <Button
                android:id="@+id/btn_juicer"
                android:layout_width="120dp"
                android:layout_height="110dp"                
                android:layout_marginLeft="30dp"                
                android:layout_marginRight="30dp"               
                android:layout_centerHorizontal="true"                
                android:background="@drawable/img_juicer_and_blender" />
 	     
 	     <Button
                android:id="@+id/btn_air"
                android:layout_width="120dp"
                android:layout_height="110dp" 
                android:layout_toLeftOf="@id/btn_juicer"
                android:background="@drawable/img_air_fryer" />
 	     
 	     <Button
                android:id="@+id/btn_garment"
                android:layout_width="120dp"
                android:layout_height="110dp" 
                android:layout_toRightOf="@id/btn_juicer"
                android:background="@drawable/img_garment_care" />
 	      
 	   

   </RelativeLayout>
   
 	<RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_1">	
        
 	   <Button
                android:id="@+id/btn_report"
                android:layout_width="120dp"
                android:layout_height="110dp" 
                android:layout_marginLeft="30dp"                
                android:layout_marginRight="30dp"
                android:layout_centerHorizontal="true"                
                android:background="@drawable/img_reporting" />
 	     
 	     <Button
                android:id="@+id/btn_male"
                android:layout_width="120dp"
                android:layout_height="110dp"  
                android:layout_toLeftOf="@id/btn_report"
                android:background="@drawable/img_male_grooming" />
 	     
 	     <Button
                android:id="@+id/btn_help"
                android:layout_width="120dp"
                android:layout_height="110dp" 
                android:layout_toRightOf="@id/btn_report"
                android:background="@drawable/img_help" />
            
 	   

   </RelativeLayout>
   
 	
   
 	 

</RelativeLayout>
